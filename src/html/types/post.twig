{% extends "../layouts/layout.twig" %}

{% block headTitle %}
  {{post.title}} | Uphoff On Media
{% endblock headTitle %}

{% block routeHeader %}
<h1 class="display-3">{{post.title}}</h1>
{% endblock routeHeader %}

{% block mainContent %}


<p class="text-muted">
  Posted on {{post.date}} by {{post.author.author_display_name}}
</p>
<div class="content">
  {{post.content}}
</div>

<div class="d-flex justify-content-between mt-4 pt-4 border-top">
  <div class="pr-2 adj-post">
    {% if post.prevPost %}
    <small class="text-muted">Previous Post:</small>
    <br>
    <a href="{{post.prevPost.relativeURL}}">{{post.prevPost.title}}</a>
    {% endif %}
  </div>
  <div class="pl-2 adj-post">
    {% if post.nextPost %}
    <small class="text-muted">Next Post:</small>
    <br>
    <a href="{{post.nextPost.relativeURL}}">{{post.nextPost.title}}</a>
    {% endif %}
  </div>
</div>


  
  
{% endblock mainContent %}

